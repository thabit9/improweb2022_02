@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model improweb2022_02.Models.Customer;

<div id="content" class="container">
    <div class="row">
        <!-- #region BreadCrump -->
        <div class="breadcrumb-container d-none d-md-flex flex-wrap align-items-center mb-4 border_">
            <ol class="breadcrumb mb-0 border_" itemscope="" itemtype="http://schema.org/BreadcrumbList">
                <li class="breadcrumb-item" itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem">
                    <a asp-controller="home" asp-action="index" title="Top" itemprop="item">
                        <meta itemprop="name" content="Home page" />
                        <meta itemprop="position" content="1" />
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item" itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem">
                    <a asp-controller="customer" asp-action="dashboard" title="Dashboard" itemprop="item">
                        <meta itemprop="position" content="2"><span itemprop="name" dir="auto">Dashboard</span>
                    </a>
                </li>
            </ol>
            <div class="breadcrumb-item active border_">
                <span>Change Password</span>
            </div>
        </div>
        <!-- #endregion -->
    </div>
    <div id="content-body" class="row">
        @await Component.InvokeAsync("DashboardSideBar")
        <!-- #endregion -->
        <!-- #region Content Center -->
        <div id="content-center" class="col-lg-9">
            <div class="page category-page">

                <div class="col-sm border_">
                    @if (ViewBag.error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.error
                        </div>
                    }
                    <form asp-controller="customer" asp-action="register" method="post" class="form-horizontal" id="register-form" novalidate="novalidate">
                        <input name="__RequestVerificationToken" type="hidden" value="52-hh7HFzx16GakHg88WemFLTSgG8fYcOVQ1-rn9QYMldPMsc6b-Yil9GXxmWq9JYXr4SdAsGFNL8cvn0Sa8fcL1_UOCPx0IbuZ1ODC4g_s1">
                        <div class="page registration-page">
                            <div class="page-title border_">
                                <h1 class="h3">Change Password</h1>
                            </div>
                            <div class="page-body rowx">
                                <div class="col-12 col-lg-9 col-xl-8">
                                    <fieldset class="content-group border_">
                                        <legend><span>Your Password</span></legend>
                                        <div class="form-group rowx"><label class="col-md-3 col-form-label required" for="Password">Current Password</label>
                                            <div class="col-md-9">
                                                <input class="form-control" data-val="true" data-val-length="'Password' must be between 6 and 500 characters." data-val-length-max="500" data-val-length-min="6" 
                                                        data-val-required="'Password' should not be empty." id="Password" type="password" asp-for="Password" placeholder="Current Passord">
                                                <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                        <div class="form-group rowx"><label class="col-md-3 col-form-label required" for="Password">New Password</label>
                                            <div class="col-md-9">
                                                <input class="form-control" data-val="true" data-val-length="'Password' must be between 6 and 500 characters." data-val-length-max="500" data-val-length-min="6" 
                                                        data-val-required="'Password' should not be empty." id="Password" type="password" asp-for="Password" placeholder="New Passord">
                                                <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                        <div class="form-group rowx"><label class="col-md-3 col-form-label required" for="ConfirmPassword">Confirm password</label>
                                            <div class="col-md-9">
                                                <input class="form-control" data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" 
                                                        data-val-required="'Confirm password' should not be empty." id="ConfirmPassword" name="ConfirmPassword"
                                                    type="password" placeholder="Confirm Passord">
                                                <span class="field-validation-valid" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <div class="form-group rowx">
                                        <div class="col-12 text-muted">
                                            * Input elements with asterisk are required and have to be filled out.
                                        </div>
                                    </div>
                                    <div class="form-group rowx">
                                        <div class="col">
                                            <button type="submit" class="btn btn-primary btn-lg" name="register-button" id="register-button">
                                               <i class="fal fa-fw fa fa-save list-group-item-icon"></i>
                                                <span>Change Password</span>
                                            </button>
                                            <input type="hidden" asp-for="CustID" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script>
                                $(document).ready(function(){
                                    $('.my-select').selectpicker();
                                    $(function () {
                                        $('select').selectpicker();
                                    });
                                });
                                $(function() {
                                    setRememberedFormFields("registerVals");
                                    _.delay(function() {
                                        $(".country-selector").trigger("change");
                                    }, 50);
                                });

                                const form = document.getElementById('register-form');
                                form.addEventListener('focusout', (event) => {
                                    rememberFormFields("register-form", "registerVals");
                                });
                            </script>
                    </form>
                    </div>
                </div>
                <div class="row" style="padding:15px">
                    <div class="col-sm border_">
                        <h5 class="border_">Secure Shopping Guarantee</h5>
                        <p class="border_">We understand that security is critical to our shoppers so we guarantee that every transaction you make at www.esquireshop.com will be safe and secure. <a href="#">Click here</a> to learn more about our privacy policy.</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>